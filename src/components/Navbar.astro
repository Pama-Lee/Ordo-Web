---
import { getLangFromUrl, useTranslations, languages } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { name: t('nav.features'), href: "#features" },
  { name: t('nav.benchmarks'), href: "#benchmarks" },
  { name: t('nav.docs'), href: "https://github.com/Pama-Lee/Ordo#readme" },
  { name: t('nav.playground'), href: "https://pama-lee.github.io/Ordo/" },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-white/5 bg-bg/80 backdrop-blur-md">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href={lang === 'zh-CN' ? '/' : `/${lang}/`} class="flex items-center gap-2 group">
          <img src="/images/favicon_io/apple-touch-icon.png" alt="Ordo Logo" class="h-8 w-8 transition-transform group-hover:rotate-12 rounded-lg" />
          <span class="text-xl font-bold tracking-tight text-white font-mono uppercase">ORDO</span>
        </a>
      </div>
      
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map(item => (
          <a href={item.href} class="text-sm font-medium text-slate-400 hover:text-white transition-colors">
            {item.name}
          </a>
        ))}
        <a 
          href="https://github.com/Pama-Lee/Ordo" 
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-sm font-medium text-slate-400 hover:text-white transition-colors"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          {t('nav.github')}
        </a>

        {/* Language Switcher */}
        <div class="relative group/lang">
          <button class="flex items-center gap-1 text-sm font-medium text-slate-400 hover:text-white transition-colors py-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
            </svg>
            {languages[lang]}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="absolute right-0 top-full hidden group-hover/lang:block pt-1">
            <div class="bg-surface border border-white/5 rounded-lg shadow-xl py-1 min-w-[120px]">
              {Object.entries(languages).map(([l, name]) => (
                <a 
                  href={l === 'zh-CN' ? '/' : `/${l}/`}
                  class={`block px-4 py-2 text-xs font-medium transition-colors ${l === lang ? 'text-brand bg-brand/5' : 'text-slate-400 hover:text-white hover:bg-white/5'}`}
                >
                  {name}
                </a>
              ))}
            </div>
          </div>
        </div>
      </nav>

      <div class="md:hidden flex items-center gap-4">
        {/* Mobile Language Switcher */}
        <div class="relative group/mobile-lang">
            <button class="text-slate-400 p-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
                </svg>
            </button>
            <div class="absolute right-0 top-full hidden group-hover/mobile-lang:block pt-1">
                <div class="bg-surface border border-white/5 rounded-lg shadow-xl py-1 min-w-[120px]">
                  {Object.entries(languages).map(([l, name]) => (
                    <a 
                      href={l === 'zh-CN' ? '/' : `/${l}/`}
                      class={`block px-4 py-2 text-xs font-medium transition-colors ${l === lang ? 'text-brand bg-brand/5' : 'text-slate-400 hover:text-white hover:bg-white/5'}`}
                    >
                      {name}
                    </a>
                  ))}
                </div>
            </div>
        </div>

        <button id="mobile-menu-button" class="text-slate-400 hover:text-white p-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  {/* Mobile Menu */}
  <div id="mobile-menu" class="hidden md:hidden bg-surface border-b border-white/5 py-4">
    <div class="px-4 space-y-4">
      {navItems.map(item => (
        <a href={item.href} class="block text-base font-medium text-slate-400 hover:text-white py-2">
          {item.name}
        </a>
      ))}
      <a href="https://github.com/Pama-Lee/Ordo" class="block text-base font-medium text-slate-400 hover:text-white py-2">
        {t('nav.github')}
      </a>
    </div>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
