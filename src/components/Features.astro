---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const features = [
  {
    title: t('features.editor_title'),
    description: t('features.editor_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>`
  },
  {
    title: t('features.performance_title'),
    description: t('features.performance_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`
  },
  {
    title: t('features.wasm_title'),
    description: t('features.wasm_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>`
  },
  {
    title: t('features.audit_title'),
    description: t('features.audit_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`
  },
  {
    title: t('features.tenant_title'),
    description: t('features.tenant_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`
  },
  {
    title: t('features.integration_title'),
    description: t('features.integration_desc'),
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 00-2 2z" /></svg>`
  }
];

const useCases = [
  {
    title: t('features.usecase_finance'),
    description: t('features.usecase_finance_desc'),
    image: "/images/main.png"
  },
  {
    title: t('features.usecase_ecommerce'),
    description: t('features.usecase_ecommerce_desc'),
    image: "/images/flow.png"
  },
  {
    title: t('features.usecase_routing'),
    description: t('features.usecase_routing_desc'),
    image: "/images/flow2.png"
  }
];
---

<section id="features" class="py-24 relative overflow-hidden reveal">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 font-mono">{t('features.title')}</h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        {t('features.description')}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map(feature => (
        <div class="group p-8 rounded-2xl bg-surface border border-white/5 hover:border-brand/30 transition-all hover:translate-y-[-4px]">
          <div class="h-12 w-12 rounded-xl bg-brand/10 flex items-center justify-center text-brand mb-6 group-hover:bg-brand group-hover:text-white transition-colors">
            <Fragment set:html={feature.icon} />
          </div>
          <h3 class="text-xl font-bold text-white mb-3 font-mono">{feature.title}</h3>
          <p class="text-slate-400 text-sm leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

    <div class="mt-32">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 font-mono">{t('features.usecase_title')}</h2>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {useCases.map(useCase => (
          <div class="relative group overflow-hidden rounded-2xl border border-white/5">
            <img src={useCase.image} alt={useCase.title} class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110 opacity-60" />
            <div class="absolute inset-0 bg-gradient-to-t from-bg via-bg/20 to-transparent p-8 flex flex-col justify-end">
              <h3 class="text-xl font-bold text-white mb-2 font-mono">{useCase.title}</h3>
              <p class="text-slate-300 text-sm">{useCase.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
