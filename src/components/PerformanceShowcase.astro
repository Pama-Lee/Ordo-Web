---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="benchmarks" class="py-24 bg-bg relative overflow-hidden reveal">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 font-mono">{t('benchmarks.title')}</h2>
      <p class="text-slate-400 max-w-2xl mx-auto">
        {t('benchmarks.description')}
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      {/* Chart Column */}
      <div class="bg-surface rounded-2xl p-8 border border-white/5 shadow-2xl">
        <div class="flex items-center justify-between mb-8">
          <h3 class="text-lg font-semibold text-white font-mono">{t('benchmarks.chart_title')}</h3>
          <span class="text-xs text-slate-500 font-mono">{t('benchmarks.chart_low_better')}</span>
        </div>
        
        <div class="space-y-6">
          <div>
            <div class="flex justify-between mb-2">
              <span class="text-sm text-slate-300">{t('benchmarks.chart_traditional')}</span>
              <span class="text-sm text-slate-400 font-mono">~1,000 µs</span>
            </div>
            <div class="h-3 w-full bg-white/5 rounded-full overflow-hidden">
              <div class="h-full bg-slate-700 w-full"></div>
            </div>
          </div>
          
          <div>
            <div class="flex justify-between mb-2">
              <span class="text-sm text-brand font-medium">{t('benchmarks.chart_ordo')}</span>
              <span class="text-sm text-brand font-mono font-bold">1.63 µs</span>
            </div>
            <div class="h-3 w-full bg-white/5 rounded-full overflow-hidden">
              <div class="h-full bg-brand w-[0.163%] min-w-[4px] shadow-[0_0_10px_rgba(249,115,22,0.5)]"></div>
            </div>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-white/5">
          <p class="text-sm text-slate-500 italic text-center">
            {t('benchmarks.chart_note')}
          </p>
        </div>
      </div>

      {/* JIT Highlight Column */}
      <div class="relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand to-accent rounded-2xl blur opacity-25 group-hover:opacity-50 transition duration-1000"></div>
        <div class="relative bg-surface rounded-2xl p-8 border border-white/10 shadow-2xl overflow-hidden">
          <div class="absolute top-0 right-0 px-4 py-1 bg-brand text-white text-[10px] font-bold uppercase font-mono tracking-widest">
            Coming Soon
          </div>
          <div class="flex items-center gap-3 mb-6">
            <div class="h-10 w-10 bg-brand/10 rounded-lg flex items-center justify-center text-brand">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white font-mono">{t('benchmarks.jit_title')}</h3>
          </div>
          
          <p class="text-slate-400 text-sm mb-8 leading-relaxed">
            {t('benchmarks.jit_desc')}
          </p>

          <div class="space-y-4">
            <div class="flex items-center justify-between p-3 rounded-lg bg-white/5 border border-white/5">
              <span class="text-xs text-slate-400">{t('benchmarks.jit_latency')}</span>
              <span class="text-sm font-bold text-white font-mono">~26 ns</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-white/5 border border-white/5">
              <span class="text-xs text-slate-400">{t('benchmarks.jit_throughput')}</span>
              <span class="text-sm font-bold text-white font-mono">76M ops/s</span>
            </div>
            <div class="flex items-center justify-between p-3 rounded-lg bg-brand/10 border border-brand/20">
              <span class="text-xs text-brand font-bold">{t('benchmarks.jit_speedup')}</span>
              <span class="text-sm font-bold text-brand font-mono">30x faster</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Execution Modes Section */}
    <div class="mt-32">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 font-mono">{t('benchmarks.modes_title')}</h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          {t('benchmarks.modes_desc')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-surface p-6 rounded-2xl border border-white/5 hover:border-blue-500/30 transition-all">
          <div class="text-xs font-bold text-blue-500 mb-2 font-mono uppercase tracking-widest">Level 1</div>
          <h4 class="text-lg font-bold text-white mb-2 font-mono">{t('benchmarks.mode_treewalk')}</h4>
          <p class="text-xs text-slate-500 leading-relaxed mb-4">{t('benchmarks.mode_treewalk_desc')}</p>
          <div class="text-sm font-mono text-slate-400">~1.5 µs</div>
        </div>

        <div class="bg-surface p-6 rounded-2xl border border-white/5 hover:border-green-500/30 transition-all">
          <div class="text-xs font-bold text-green-500 mb-2 font-mono uppercase tracking-widest">Level 2</div>
          <h4 class="text-lg font-bold text-white mb-2 font-mono">{t('benchmarks.mode_vm')}</h4>
          <p class="text-xs text-slate-500 leading-relaxed mb-4">{t('benchmarks.mode_vm_desc')}</p>
          <div class="text-sm font-mono text-slate-400">~830 ns</div>
        </div>

        <div class="bg-surface p-6 rounded-2xl border border-white/5 hover:border-purple-500/30 transition-all">
          <div class="text-xs font-bold text-purple-500 mb-2 font-mono uppercase tracking-widest">Level 3</div>
          <h4 class="text-lg font-bold text-white mb-2 font-mono">{t('benchmarks.mode_vectorized')}</h4>
          <p class="text-xs text-slate-500 leading-relaxed mb-4">{t('benchmarks.mode_vectorized_desc')}</p>
          <div class="text-sm font-mono text-slate-400">Batch Optimization</div>
        </div>

        <div class="bg-surface/80 p-6 rounded-2xl border border-brand/20 hover:border-brand/50 transition-all shadow-[0_0_20px_rgba(249,115,22,0.1)]">
          <div class="text-xs font-bold text-brand mb-2 font-mono uppercase tracking-widest">Level 4</div>
          <h4 class="text-lg font-bold text-white mb-2 font-mono">{t('benchmarks.mode_jit')}</h4>
          <p class="text-xs text-slate-500 leading-relaxed mb-4">{t('benchmarks.mode_jit_desc')}</p>
          <div class="text-sm font-mono text-brand font-bold">~26 ns</div>
        </div>
      </div>
    </div>

    {/* Stats Grid */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-12">
      <div class="bg-surface p-6 rounded-xl border border-white/5 hover:border-brand/30 transition-colors">
        <div class="h-10 w-10 bg-brand/10 rounded-lg flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-brand" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h4 class="text-white font-bold mb-1 font-mono text-xl">79-211 ns</h4>
        <p class="text-slate-400 text-sm">{t('benchmarks.stat_eval')}</p>
      </div>
      
      <div class="bg-surface p-6 rounded-xl border border-white/5 hover:border-brand/30 transition-colors">
        <div class="h-10 w-10 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
        </div>
        <h4 class="text-white font-bold mb-1 font-mono text-xl">54,000+ QPS</h4>
        <p class="text-slate-400 text-sm">{t('benchmarks.stat_api_qps')}</p>
      </div>

      <div class="bg-surface p-6 rounded-xl border border-white/5 hover:border-brand/30 transition-colors">
        <div class="h-10 w-10 bg-blue-500/10 rounded-lg flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h4 class="text-white font-bold mb-1 font-mono text-xl">3.9 ms</h4>
        <p class="text-slate-400 text-sm">{t('benchmarks.stat_p99')}</p>
      </div>

      <div class="bg-surface p-6 rounded-xl border border-white/5 hover:border-brand/30 transition-colors">
        <div class="h-10 w-10 bg-green-500/10 rounded-lg flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2 1 3 3 3h10c2 0 3-1 3-3V7c0-2-1-3-3-3H7c-2 0-3 1-3 3z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 4v4m8-4v4m-8 8h8" />
          </svg>
        </div>
        <h4 class="text-white font-bold mb-1 font-mono text-xl">0 Alloc</h4>
        <p class="text-slate-400 text-sm">{t('benchmarks.stat_heap')}</p>
      </div>
    </div>
  </div>
</section>
