---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="relative overflow-hidden pt-20 pb-16 lg:pt-32 lg:pb-24">
  {/* Background Decoration */}
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] rounded-full opacity-60" style="background: radial-gradient(circle, rgba(249, 115, 22, 0.4) 0%, rgba(249, 115, 22, 0.1) 40%, transparent 70%); filter: blur(80px);"></div>
    <div class="absolute top-1/4 right-0 w-[500px] h-[500px] rounded-full opacity-40" style="background: radial-gradient(circle, rgba(34, 211, 238, 0.3) 0%, transparent 60%); filter: blur(60px);"></div>
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] bg-center opacity-20" style="mask-image: linear-gradient(180deg, white, rgba(255,255,255,0));"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-20 mb-16">
      {/* Logo on the left for large screens */}
      <div class="shrink-0 animate-fade-in">
        <img src="/images/ordo-logo.png" alt="Ordo Large Logo" class="h-32 w-32 md:h-48 md:w-48 lg:h-64 lg:w-64" />
      </div>

      {/* Content on the right for large screens */}
      <div class="text-center lg:text-left">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-brand/10 border border-brand/20 mb-6 animate-fade-in">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-brand opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-brand"></span>
          </span>
          <span class="text-xs font-medium text-brand uppercase tracking-wider font-mono">{t('hero.badge')}</span>
        </div>

        <h1 class="text-5xl md:text-7xl font-bold tracking-tight text-white mb-6 font-mono leading-tight">
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-white/50">{t('hero.title_part1')}</span><br />
          <span class="text-brand">{t('hero.title_part2')}</span>
        </h1>

        <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto lg:mx-0 mb-10 leading-relaxed">
          {t('hero.subtitle')}
        </p>

        <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4">
          <a 
            href="https://pama-lee.github.io/Ordo/" 
            target="_blank"
            class="px-8 py-4 bg-brand hover:bg-brand-muted text-white font-semibold rounded-lg transition-all shadow-[0_0_20px_rgba(249,115,22,0.3)] hover:shadow-[0_0_30px_rgba(249,115,22,0.5)] flex items-center justify-center gap-2"
          >
            {t('hero.cta_playground')}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
          <a 
            href="https://github.com/Pama-Lee/Ordo" 
            target="_blank"
            class="px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-semibold rounded-lg border border-white/10 transition-all flex items-center justify-center gap-2"
          >
            {t('hero.cta_github')}
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
          </a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto pt-10 border-t border-white/5">
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-white mb-1 font-mono">1.63<span class="text-lg">Âµs</span></span>
        <span class="text-xs text-slate-500 uppercase tracking-widest font-mono">{t('hero.stat_latency')}</span>
      </div>
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-white mb-1 font-mono">615K<span class="text-lg">/s</span></span>
        <span class="text-xs text-slate-500 uppercase tracking-widest font-mono">{t('hero.stat_qps')}</span>
      </div>
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-white mb-1 font-mono">79<span class="text-lg">ns</span></span>
        <span class="text-xs text-slate-500 uppercase tracking-widest font-mono">{t('hero.stat_eval')}</span>
      </div>
      <div class="flex flex-col items-center">
        <span class="text-3xl font-bold text-white mb-1 font-mono">54K<span class="text-lg">QPS</span></span>
        <span class="text-xs text-slate-500 uppercase tracking-widest font-mono">{t('hero.stat_api')}</span>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>
