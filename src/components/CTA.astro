---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-24 relative overflow-hidden reveal">
  <div class="absolute inset-0 -z-10">
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-full h-1/2 bg-gradient-to-t from-brand/20 to-transparent blur-[120px]"></div>
  </div>

  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-surface border border-white/10 rounded-3xl p-8 md:p-16 text-center relative overflow-hidden">
      {/* Decorative Grid */}
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10 pointer-events-none"></div>
      
      <h2 class="text-3xl md:text-5xl font-bold text-white mb-6 font-mono relative z-10">{t('cta.title')}</h2>
      <p class="text-slate-400 text-lg mb-10 max-w-2xl mx-auto relative z-10">
        {t('cta.desc')}
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4 relative z-10">
        <a 
          href="https://github.com/Pama-Lee/Ordo#quick-start" 
          class="px-8 py-4 bg-brand hover:bg-brand-muted text-white font-bold rounded-xl transition-all shadow-[0_0_20px_rgba(249,115,22,0.3)] hover:shadow-[0_0_30px_rgba(249,115,22,0.5)]"
        >
          {t('cta.btn_start')}
        </a>
        <a 
          href="https://pama-lee.github.io/Ordo/" 
          target="_blank"
          class="px-8 py-4 bg-white/5 hover:bg-white/10 text-white font-bold rounded-xl border border-white/10 transition-all"
        >
          {t('cta.btn_playground')}
        </a>
      </div>
    </div>
  </div>
</section>
